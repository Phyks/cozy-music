div[role='toolbar']
    .notification
        position: absolute
        left: 16px
        bottom: 93px
        width: 248px
        height: 66px
        border-radius: 3px
        background-color: #696d78
        box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1)
        opacity: 0
        visibility: visible
        display: flex
        align-items: center

        p
            padding-left: 14px
            padding-right: 32px
            font-family: "Source Sans Pro"
            font-size: 16px
            line-height: 1.3
            color: $white

        svg
            padding-left: 14px
            width: 40px
            height: 40px

            path
                fill: $white

    .notify
        animation-timing-function: ease;
        animation-name: notify;
        animation-duration: 3s;
