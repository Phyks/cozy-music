.tracks
    &:not(.upNext)
        .delete-from-upnext
            display: none
    &.upNext
        .add-to-upnext
            display: none
    &:not(.playlist)
        .remove-from-playlist
            display: none


    div[role='rowheader']
        width: 100%
        color: $text-light
        display: flex
        color: $text-dark
        font-family: 'Source Sans Pro'
        font-weight: bold
        height: 36px
        box-shadow: inset 0 -2px 0 0 #d5dce1
        font-size: 13px
        text-transform: uppercase

    [role='gridcell']
        text-align: left
        display: flex;
        align-items: center

    .number-column-cell
        justify-content: center
        width: 42px
        .play-icon
            visibility: hidden
            width: 18px
            height: 18px
            fill: $svg

    .song-column-cell
        flex-grow: 1

    .artist-column-cell
        width: 200px

    .album-column-cell
        position: relative
        width: 200px

    .length-column-cell
        width: 62px

    .play-icon:hover
        fill: $text-dark

    ul
        display: flex
        flex-direction: column

        li
            display: flex
            cursor: pointer
            height: 41px
            background-color: transparent
            box-shadow: inset 0 -1px 0 0 #d5dce1
            font-size: 14px
            color: $text-light
            position: relative

            &.selected
                background-color: $background-dark

            &.playing
                color: $red

                .song-column-cell
                    color: $red

                .play-icon
                    visibility: visible
                    fill: $red

                    .play
                        display: none

            .song-column-cell
                flex-grow: 1
                font-size: 16px
                color: $text-dark

        li:hover
            background-color: $background-dark

            &:not(.playing)
                .play-icon
                    visibility: visible

                    .speaker
                            display: none

            .actions
                visibility: visible
