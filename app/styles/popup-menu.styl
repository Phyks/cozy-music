.tracks
    .popup-menu
        visibility: hidden
        position: absolute
        min-width: 240px
        z-index: 6
        top: 37px
        right: 50px
        padding: 14px 0px
        border-radius: 10px
        background-color: white
        box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.1), 0 1px 3px 0 rgba(0, 0, 0, 0.2)

        @media (max-width: 63.9375em)
            position: fixed
            width: 90vw
            top: auto
            right: auto
            padding-top: 0px
            left: 50%
            bottom: 64px
            transform: translate(-50%, 0)

        .popup-header
            display: none
            width: 100%
            flex-direction: column
            padding: 10px 20px
            margin-bottom: 10px
            border-bottom: 1px solid #d5dce1

            @media (max-width: 63.9375em)
                display: flex

            h4
                color: $text-dark
                font-size: 16px
                margin-bottom: 4px

            p
                color: $text-light
                font-size: 14px

        .small
            width: 14px
            height: 14px
            opacity: 0.3
            position: absolute
            top: 24px
            right: 14px

            @media (max-width: 63.9375em)
                top: 76px

            svg
                fill: $svg
        ul
            .album-to-upnext
                display: none // unimplemented

            .edit-details
                display: none // unimplemented

            .add-to-upnext-menu
                display: none

                @media (max-width: 63.9375em)
                    display: flex

            li
                display: flex
                font-size: 16px
                padding: 0px 20px
                height: 36px
                line-height: 2.3
                box-shadow: none
                color: $text-dark
                align-items: center

                p
                    width: 100%
                    height: 100%
                    text-decoration: none
                    display: block
                    color: $text-dark

                svg
                    height: 20px
                    width: 20px
                    padding-right: 14px
                    fill: $svg

            li:hover
                background-color: $background-dark

    .show
        visibility: visible

    #playlist-popup-menu
        z-index: 100
        right: 200px
        top: 0px
        min-width: 240px
        display: inline-block

        @media (max-width: 63.9375em)
            right: auto
            top: auto
            width: 90vw

        .selected
            background-color: transparent
            &:hover
                background-color: $background-dark

        #add-playlist
            border-top: 1px solid #d5dce1
            height: 40px
            align-items: center
            padding: 0px 20px

            input
                width: 100%
                height: 100%
                display:none

        #add-playlist.input
            p
                display:none
            input
                display: block
