#tracks
    .popup-menu
        visibility: hidden
        position: absolute
        z-index: 99
        top: 37px
        right: 50px
        padding: 14px 0px
        border-radius: 10px
        background-color: white
        box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.1), 0 1px 3px 0 rgba(0, 0, 0, 0.2)

        .small
            width: 14px
            height: 14px
            opacity: 0.3
            position: absolute
            right: 14px
            svg
                path
                    fill: $svg
        ul
            li
                font-size: 16px
                padding: 0px 20px
                height: 36px
                box-shadow: none
                color: $text-dark
                align-items: center

                svg
                    height: 20px
                    width: 20px
                    padding-right: 14px
                    path
                        fill: $svg

            li:hover
                background-color: $background-dark;

        #add-playlist
            border-top: 1px solid #d5dce1;

    .popup-menu.show
        visibility: visible
